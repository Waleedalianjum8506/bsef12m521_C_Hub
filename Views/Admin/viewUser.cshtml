@{
    ViewBag.Title = "Cartoon Hub";
}

@using cartoon.Models

<div class="container" id="sheet" style="width:80%;">
    <h2>All Users Details</h2>
    
        <table class="table table-bordered table-hover" style="margin-left:-4%;">
            <thead style="font-weight:700">
                <tr>
                    
                    <th>Id</th>
                    <th>Username</th>
                    <th>Type</th>
                    <th>Password</th>
                    <th>Email</th>
                    
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (user u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.username</td>
                            <td>@u.type</td>
                            <td>@u.password</td>
                            <td>@u.email</td>

                            <td><button class="form-control" onclick="self.location='/Admin/edituser/@u.Id'">Edit</button></td>
                             <td>   <button class="form-control" onclick="self.location='/Admin/delete/@u.Id'">Delete</button>

                            </td>

                        </tr>
                    
                    }
                }
            </tbody>
        </table>
    
</div>

