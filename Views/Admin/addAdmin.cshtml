@{
    ViewBag.Title = "Cartoon Hub";
}
@model cartoon.Models.user
<style>  
  #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>

<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Add new Admin</h2>
    <div class="container overlay">
        <div class="row">
            <form class="form-horizontal" method="post" action="/Admin/addNewAdmin">
               <ul> <li>
                    @Html.LabelFor(x => x.name)
                    @Html.TextBoxFor(x => x.name, new { @class = " form-control", id = "name", name = "name" })
                </li>
                <li>
                    @Html.LabelFor(x => x.username)
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control"})
                </li>
                   <li>
                       @Html.LabelFor(x => x.password)
                       @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
                   </li>
                   <li>
                       @Html.LabelFor(x => x.email)
                      @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                   </li>
</ul>
                <div class="form-group" style="padding-left:18%">
                    <br /><br /><button type="submit" class="btn btn-default">Submit</button><br /><br /><br />
                </div>
            </form>
        </div>
    </div>

</div>
