@{
    ViewBag.Title = "Cartoon Hub";
}
@model cartoon.Models.content
<style>
    #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Edit Content</h2>
    <div class="container overlay">
        <div class="row">
            <form class="form-horizontal" method="post" action="/Admin/savecontent/@Model.Id">
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Id:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="id" name="id" type="text" class="form-control" value=@Model.Id readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Name:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="name" name="name" type="text" class="form-control" readonly value=@Model.name>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Type:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="type" name="type" type="text" class="form-control" value=@Model.type readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Description:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="description" name="description" type="text" class="form-control" value=@Model.description>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Channel Name:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="channelname" name="channelname" type="text" readonly class="form-control" value=@Model.channelname>
                    </div>
                </div>



                <div class="form-group" style="padding-left:18%">
                    <br /><br /><button type="submit" class="btn btn-default">Submit</button><br /><br /><br />
                </div>
            </form>
        </div>
    </div>

</div>


