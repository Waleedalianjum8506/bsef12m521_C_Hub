@{
    ViewBag.Title = "Add channel";
}



<style>
    #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>

<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Add Channel</h2>
    <div class="container overlay">
        <div class="row">
            <form class="form-horizontal" method="post" action="/Admin/addingchannel" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Name of channel:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="chanl" name="chanl" type="text" class="form-control">
                    </div>
                </div>


                <div class="form-group" style="padding-left:18%">
                    <br /><br /><button type="submit" class="btn btn-default">Submit</button><br /><br /><br />
                </div>
            </form>
        </div>
    </div>

</div>
