@{
    ViewBag.Title = "viewCategories";
}



@using cartoon.Models

<div class="container" id="sheet" style="width:80%;">
    <h2>All Categories</h2>

    <table class="table table-bordered table-hover" style="margin-left:-4%;">
        <thead style="font-weight:700">
            <tr>

                <th>Id</th>
                <th>Name</th>
                

            </tr>
        </thead>
        <tbody>
            @{
                foreach (Table u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.name</td>
                        

                        <td><button class="form-control" onclick="self.location='/Admin/editcategory/@u.Id'">Edit</button></td>
                        <td>
                            <button class="form-control" onclick="self.location='/Admin/deletecategory/@u.Id'">Delete</button>

                        </td>

                    </tr>

                }
            }
        </tbody>
    </table>

</div>



