@{
    ViewBag.Title = "Cartoon Hub";
}
@model cartoon.Models.user
<style>
    #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Edit User</h2>
    <div class="container overlay">
        <div class="row">
            <form class="form-horizontal" method="post" action="/Admin/saveuser/@Model.Id">
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Id:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="id" name="id" type="text"  class="form-control" value=@Model.Id readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Name:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="username" name="username" type="text"  class="form-control" value=@Model.name readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Password:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="pass" name="pass" type="text"  class="form-control" value=@Model.password>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <h4>Email:</h4><input style="min-width: 150px; width: 25%; margin-left: 10%" id="email" name="email" type="text" class="form-control" value=@Model.email>
                    </div>
                </div>
                


                <div class="form-group" style="padding-left:18%">
                    <br /><br /><button type="submit" class="btn btn-default">Submit</button><br /><br /><br />
                </div>
            </form>
        </div>
    </div>

</div>

